---
import { Image } from "astro:assets"
import Layout from "../layouts/Layout.astro"
import About from "../components/About.astro"
import ThemeSwitch from "../components/ThemeSwitch.astro"
import Language from "../components/Language.astro"
import BasicInfo from "../components/BasicInfo.astro"
import LinkCard from "../components/LinkCard.astro"
import Experience from "../components/Experience.astro"
import MediaPlayer from "../components/MediaPlayer.astro"

import LinkedIn from "../assets/images/linkedin.svg"
import AlmostMe from "../assets/images/almost_me.gif"
import Octocat from "../assets/images/octocat.gif"
import Skills from "../components/Skills.astro"
---

<Layout title="Jose Avila - Software Developer ðŸ’»">
  <main class="flex flex-col m-5">
    <div
      class="container grid grid-cols-3 gap-2 mx-auto my-5 md:grid-cols-4 md:gap-4 xl:px-20"
    >
      <About />
      <Language />
      <ThemeSwitch />
      <BasicInfo />
      <LinkCard color="bg-[#E3E3E3]">
        <div class="flex flex-col justify-center items-center">
          <Image alt="linkedin" src={LinkedIn} class="max-w-14 max-h-14" />
          <p>Profile</p>
        </div>
      </LinkCard>
      <LinkCard
        cols="col-span-2 md:col-span-2"
        rows="row-span-1"
        color="bg-black"
        square={false}
        custom="lab"
      >
        <div class="flex items-center">
          <Image src={AlmostMe} alt="code error" class="w-14 md:w-[10rem]" />
          <div>
            <h2 class="text-2xl md:text-6xl font-bold text-white">Lab</h2>
            <p class="text-white text-xs md:text-base">
              Here you can view some of my personal work and experiments, and
              why not? some fails
            </p>
          </div>
        </div>
      </LinkCard>
      <LinkCard cols="col-span-3 md:col-span-2" square={false}>
        <div>
          <content class="block text-black z-10">
            <h2 class="text-5xl font-bold mb-4">Code repository</h2>
            <p class="w-[60%]">
              I got (almost) all my code for free view in case if you want to
              get deep on my work as developer
            </p>
          </content>
          <Image
            alt="octocat"
            src={Octocat}
            class="absolute right-0 bottom-0 z-0 w-52 max-w-[465px]:"
          />
        </div>
      </LinkCard>
      <Skills />
      <Experience />
      <MediaPlayer />
      <LinkCard />
    </div>
  </main>
</Layout>
