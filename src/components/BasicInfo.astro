---
const getAge = (birthYear: number) => {
  const currentYear = new Date().getFullYear()
  const age = currentYear - birthYear
  return age
}

const age = getAge(1985)
---

<div
  class="basic-info flex justify-center items-center bg-[#F7DF1E] rounded-xl col-span-1 square xs:h-auto xs:square"
>
  <p class="text-xs md:text-xl lg:text-4xl font-bold text-center text-black">
    🎂 <br />
    {age} Years old <br />
     📍<br />
     Santiago, Chile
  </p>
</div>
