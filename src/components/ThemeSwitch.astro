---
import { Image } from "astro:assets"
import Sun from "../assets/images/sun.svg"
import Moon from "../assets/images/moon.svg"
---

<div
  class="theme flex justify-center items-center bg-[#242432] md:w-full h-36 md:h-40 rounded-xl col-span-3"
>
  <figure
    class="flex flex-row justify-between relative bg-[#040E26] w-[110px] h-[52px] rounded-full p-1"
  >
    <div
      class="switch absolute top-0 right-0 bg-[#D9D9D9] w-[52px] h-[52px] rounded-full"
    >
    </div>
    <Image alt="dark theme" src={Moon} />
    <Image alt="light theme" src={Sun} />
  </figure>
</div>
