---
import { Image } from "astro:assets"
import AudioPlayer from "./player/AudioPlayer.astro"
import { getToken } from "./player/spotifyAPI"

import Cover from "../assets/images/albumcover.png"
import Spotify from "../assets/images/spotify.svg"

const clientId = import.meta.env.CLIENT_ID
const clientSecret = import.meta.env.CLIENT_SECRET
const apiURL = import.meta.env.API_URL
const authToklien = await getToken(clientId, clientSecret)

const requestOptions = {
  method: "GET",
  headers: {
    Authorization: `Bearer ${authToklien}`,
    "Content-Type": "application/json",
  },
}

const response = await fetch(apiURL, requestOptions)
const data = await response.json()
const currentTrack = (await data?.items) && data.items[0].track

